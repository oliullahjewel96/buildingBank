@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}
<h1 class="h4 mb-4">Admin Dashboard</h1>

<div class="row g-3">
    <div class="col-sm-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="small text-muted">Total Users</div>
                <div class="h3 mb-2">3</div>
                <a class="btn btn-sm btn-outline-primary" asp-action="Users">Manage Users</a>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="small text-muted">Transactions (last 7d)</div>
                <div class="h3 mb-2">3</div>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Transactions">View Transactions</a>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="small text-muted">My Profile</div>
                <div class="h3 mb-2">Admin Aisha</div>
                <a class="btn btn-sm btn-outline-dark" asp-action="Profile">Edit Profile</a>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="card-title">Quick Actions</h5>
        <a class="btn btn-primary me-2" asp-action="Users">Add / Edit Users</a>
        <a class="btn btn-secondary me-2" asp-action="Transactions">Search Transactions</a>
        <a class="btn btn-outline-dark" asp-action="Profile">Update Password</a>
    </div>
</div>
