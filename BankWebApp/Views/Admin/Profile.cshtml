@model BankWebApp.Models.AdminProfile
@{
    ViewData["Title"] = "My Profile";
    Layout = "_AdminLayout";
}
<h2>@ViewData["Title"]</h2>

@if (TempData["ProfileMessage"] != null)
{
    <div class="alert alert-success">@TempData["ProfileMessage"]</div>
}
@if (TempData["PasswordMessage"] != null)
{
    <div class="alert alert-success">@TempData["PasswordMessage"]</div>
}
@if (ViewBag.PasswordError != null)
{
    <div class="alert alert-danger">@ViewBag.PasswordError</div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <img src="@Model.ProfileImageUrl" alt="Profile" style="width:96px;height:96px;border-radius:50%;object-fit:cover;margin-right:12px;" />
                    <div>
                        <h5 class="card-title mb-0">@Model.Name</h5>
                        <small class="text-muted">@Model.Email</small>
                    </div>
                </div>

                <form asp-action="UpdateProfile" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input class="form-control" name="Name" value="@Model.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input class="form-control" name="Email" value="@Model.Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input class="form-control" name="Phone" value="@Model.Phone" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Profile Image URL</label>
                        <input class="form-control" name="ProfileImageUrl" value="@Model.ProfileImageUrl" />
                    </div>
                    <button type="submit" class="btn btn-primary">Save Profile</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Change Password</h5>
                <form asp-action="ChangePassword" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Current Password</label>
                        <input class="form-control" name="CurrentPassword" type="password" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input class="form-control" name="NewPassword" type="password" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm New Password</label>
                        <input class="form-control" name="ConfirmNewPassword" type="password" />
                    </div>
                    <button type="submit" class="btn btn-secondary">Update Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
