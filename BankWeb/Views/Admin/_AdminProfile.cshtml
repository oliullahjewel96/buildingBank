<div class="card">
    <h2>Admin Profile</h2>

    <!-- Profile display -->
    <div id="admin-profile-view" class="stack">
        <img id="admin-profile-pic" class="avatar" alt="Admin Profile" />
        <div>
            <div><strong>Name:</strong> <span id="admin-profile-name"></span></div>
            <div><strong>Email:</strong> <span id="admin-profile-email"></span></div>
            <div><strong>Phone:</strong> <span id="admin-profile-phone"></span></div>
        </div>
    </div>

    <!-- Profile edit form (hidden by default) -->
    <form id="admin-profile-form" class="stack" hidden>
        <label>Name <input id="admin-input-name" required /></label>
        <label>Email <input id="admin-input-email" type="email" required /></label>
        <label>Phone <input id="admin-input-phone" required /></label>
        <div class="row">
            <button type="submit" class="btn">Save</button>
            <button type="button" id="admin-btn-cancel-profile" class="btn outline">Cancel</button>
        </div>
    </form>

    <!-- Action buttons -->
    <div class="row">
        <button id="admin-btn-edit-profile" class="btn">Edit</button>
    </div>

    <div class="msg" id="admin-profile-msg" hidden></div>
</div>
