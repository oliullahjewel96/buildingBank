<div class="card">
  <h2>Admin Login</h2>
  <form id="login-form" class="stack">
    <label>Email
      <input id="login-email" type="email" required />
    </label>
    <label>Password
      <input id="login-pass" type="password" required />
    </label>
    <button type="submit" class="btn">Login</button>
  </form>
  <div class="msg" id="login-msg" hidden></div>
</div>
