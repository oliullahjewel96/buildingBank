<div class="card">
  <h2>Transfer</h2>
  <form id="transfer-form" class="stack">
    <label>From account
      <select id="from-account" required></select>
    </label>

    <label>To account number
      <input id="to-number" required pattern="[-0-9\s]{6,}" />
    </label>

    <label>Amount
      <input id="amount" type="number" step="0.01" min="0.01" required />
    </label>

    <label>Description
      <input id="description" maxlength="100" />
    </label>

    <button type="submit">Send</button>
  </form>

  <div class="msg" id="transfer-msg" hidden></div>
</div>

