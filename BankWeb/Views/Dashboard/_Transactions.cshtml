<div class="card">
  <h2>Transactions</h2>

  <!-- Date range filter (dashboard.js listens on #tx-filter) -->
  <form id="tx-filter" class="row" style="margin:10px 0 14px 0;">
    <label>From
      <input type="date" id="from-date" />
    </label>
    <label>To
      <input type="date" id="to-date" />
    </label>
    <button type="submit" class="btn">Apply</button>
  </form>

  <!-- Table (dashboard.js fills #tx-table tbody) -->
  <table id="tx-table" class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th class="right">Amount</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <!-- Empty-state message (shown by dashboard.js when no rows) -->
  <div class="msg" id="tx-empty" hidden>No transactions in this date range.</div>
</div>
